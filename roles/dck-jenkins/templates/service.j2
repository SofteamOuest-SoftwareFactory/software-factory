[Unit]
Description=Jenkins
Requires=docker.service

[Service]

ExecStartPre=/bin/sleep 1
ExecStartPre=/bin/docker pull jenkins/jenkins:2.133
ExecStart=/bin/docker run --restart=always --name=systemd_jenkins -v /var/run/docker.sock:/var/run/docker.sock -v /mnt/jenkins/backups:/backups -v /home/jenkins/jenkins_home:/var/jenkins_home -p 8080:8080 -e GIT_SSL_NO_VERIFY=true jenkins/jenkins:2.133
ExecStop=/bin/docker stop systemd_jenkins
ExecStopPost=/bin/docker rm -f systemd_jenkins
ExecReload=/bin/docker restart systemd_jenkins

[Install]
WantedBy=multi-user.target