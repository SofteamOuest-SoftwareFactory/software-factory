server {
    # Logs
    access_log  /var/log/nginx/registry.access.log;
    error_log   /var/log/nginx/registry.error.log;

    listen 443 ssl; # managed by Certbot
    server_name registry.{{domaine}};

    # allow large uploads of files
    client_max_body_size 1G;

    ssl_certificate /etc/letsencrypt/live/nexus.coface.softeamgroup.fr/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/nexus.coface.softeamgroup.fr/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

	location / {
        proxy_set_header Host $http_host;   # required for docker client's sake
        proxy_set_header X-Real-IP $remote_addr; # pass on real client's IP
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 900;
        proxy_pass https://localhost:8443/;
	}
}